<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="2dp"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="135dp"
                    android:layout_marginStart="110dp"
                    app:srcCompat="@drawable/download"
                    android:scaleType="centerCrop"
                    />

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escoge el tipo de funcion"
                    android:textStyle="italic"
                    android:textSize="20dp"

                    />
            </LinearLayout>

                <!-- Buttons -->


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ingresar"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"
                    app:cornerRadius="?attr/dialogPreferredPadding"
                    android:onClick="sendOnclickButton"
                    android:textColor="@color/buttonsMain"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:text="Ingresar" />

                <Button
                    android:id="@+id/visualizar"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:textStyle="bold"
                    app:cornerRadius="?attr/dialogPreferredPadding"
                    android:layout_marginStart="15dp"
                    android:onClick="consultar"
                    android:textColor="@color/buttonsMain"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:text="Consultar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sendbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"
                    app:cornerRadius="?attr/dialogPreferredPadding"
                    android:onClick="borrar"
                    android:textColor="@color/buttonsMain"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:text="Borrar" />

                <Button
                    android:id="@+id/viewListButton"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:textStyle="bold"
                    app:cornerRadius="?attr/dialogPreferredPadding"
                    android:layout_marginStart="25dp"
                    android:onClick="modificar"
                    android:textColor="@color/buttonsMain"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:text="Modificar" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>